{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Nole",
    "version": "0.1.8"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": "^((/\\w+)|([A-Za-z]:\\w+)).+"
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.frostmiku.nole",
      "category": "Education",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src * 'self' 'unsafe-inline' data: asset://localhost; script-src 'self' asset://localhost 'unsafe-eval'"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Nólë",
        "width": 1000,
        "height": 850,
        "minWidth": 800,
        "minHeight": 600,
        "fileDropEnabled": false
      }
    ]
  }
}
